@model Admin.Models.BaiKiemTra

@{
    ViewData["Title"] = "Create";
}

<h1>Quản lý bài kiểm tra</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="BaiKT">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenBaiKT" class="control-label"></label>
                <input asp-for="TenBaiKT" id="TenBaiKT" class="form-control" />
                <span asp-validation-for="TenBaiKT" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="KeyBaiKT" class="control-label"></label>
                <input asp-for="KeyBaiKT" id="KeyBaiKT" class="form-control" />
                <span asp-validation-for="KeyBaiKT" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Ngay" class="control-label"></label>
                <input asp-for="Ngay" id="Ngay" class="form-control" />
                <span asp-validation-for="Ngay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaGiangVien" class="control-label"></label>
                <select asp-for="MaGiangVien" id="MaGiangVien" class="form-control" asp-items="ViewBag.GiangVienId">
                </select>
                <span asp-validation-for="MaGiangVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaLopHocPhan" class="control-label"></label>
                <select asp-for="MaLopHocPhan" id="MaLopHocPhan" class="form-control" asp-items="ViewBag.LopHPId">
                </select>
                <span asp-validation-for="MaLopHocPhan" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TrangThai" /> @Html.DisplayNameFor(model => model.TrangThai)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ThoiGianLam" class="control-label"></label>
                <input asp-for="ThoiGianLam" id="ThoiGianLam"class="form-control" />
                <span asp-validation-for="ThoiGianLam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="submitCreate" type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Danh sách</a>
</div>

<script>
    $().ready(function () {
        $("#submitCreate").dblclick(function (e) {
            e.preventDefault();
        });
    }
</script>

<script>
        $().ready(function () {
            $("#BaiKT").validate({
                onfocusout: false,
                onkeyup: false,
                onclick: false,
                rules: {
                    "TenBaiKT": {
                        required: true,
                    },
                    "Ngay":
                    {
                        required: true
                    },
                    "MaGiangVien":
                    {
                        required: true
                    },
                    "MaLopHocPhan":
                    {
                        required: true
                    },
                    "ThoiGianLam":
                    {
                        required: true
                    }
                },
                messages:
                {
                    "TenBaiKT": {
                        required: "Tên bài kiểm tra không được bỏ trống" ,
                    },
                    "Ngay":
                    {
                        required: "Ngày làm bài kiểm tra không được bỏ trống"
                    },
                    "MaGiangVien":
                    {
                        required: "Tên giảng viên không được bỏ trống"
                    },
                    "MaLopHocPhan":
                    {
                        required: "Lớp học phần không được bỏ trống"
                    },
                    "ThoiGianLam":
                    {
                        required: "Thời gian làm không được bỏ trống"
                    }
                }
            });
        });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
