@model Admin.Models.CTLopHP

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa</h1>

<h4>Chi tiết lớp học phần</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaCTLopHP" />
            <div class="form-group">
                <label  class="control-label">Lớp học phần</label>
                <select asp-for="LopHocPhanMaLopHP" class="form-control" asp-items="ViewBag.LopHPId">
                </select>
                <span asp-validation-for="LopHocPhanMaLopHP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mã số sinh viên</label>
                <input class="form-control" id="tags" value="@ViewBag.TenSV">
                <input type="hidden" id="hfSinhVien" asp-for="SinhVienMaSV" />

                <span asp-validation-for="SinhVienMaSV" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Danh sách</a>
</div>
<script>
    $(function () {
        $("#tags").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: '/CTLopHPs/AutoComplete/',
                    data: { "prefix": request.term },
                    type: "POST",
                    success: function (data) {
                        response($.map(data, function (item) {
                            return item;
                        }))
                    },
                    error: function (response) {
                        alert(response.responseText);
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    }
                });
            },
            select: function (e, i) {
                $("#hfSinhVien").val(i.item.val);
            },
            minLength: 1
        });
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
