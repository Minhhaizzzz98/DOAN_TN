@model IEnumerable<Admin.ModelJoin.CTLopHocPhanJoin>

@{
    ViewData["Title"] = "Index";
}

<h1>Trang chủ Chi tiết lớp học phần</h1>

<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LopHocPhan.TenLopHP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SinhVien.TenSV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CTLopHP.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LopHocPhan.TenLopHP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SinhVien.TenSV)
            </td>
            <td>
                @if (item.CTLopHP.Status)
                {
                    <button type="button" class="btn btn-success">Hoạt động</button>
                }
                else
                {
                    <button type="button" class="btn btn-secondary">Không hoạt động</button>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CTLopHP.MaCTLopHP">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CTLopHP.MaCTLopHP">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CTLopHP.MaCTLopHP">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('.table').DataTable();
    });
</script>