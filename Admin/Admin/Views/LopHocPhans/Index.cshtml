@model IEnumerable<Admin.ModelJoin.LopHocPhanJoinGiangVien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Trang chủ Lớp học phần</h1>

<p>
    <a asp-action="Create">Tạo mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LopHocPhan.TenLopHP)
            </th>
            <th>
               Tên giảng viên
            </th>
            <th>
                Tên môn học
            </th>
            <th>
                Tên lớp
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LopHocPhan.TrangThai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LopHocPhan.TenLopHP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiangVien.TenGiangVien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MonHoc.TenMonHoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lop.TenLop)
                </td>
                <td>
                    @if (item.LopHocPhan.TrangThai == 1)
                    {
                        <button type="submit" class="btn btn-success">Hoạt động</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-secondary">Không hoạt động</button>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.LopHocPhan.MaLopHP">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.LopHocPhan.MaLopHP">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.LopHocPhan.MaLopHP">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('.table').DataTable();
    });
</script>