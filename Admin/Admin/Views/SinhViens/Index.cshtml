@model IEnumerable<Admin.ModelJoin.SinhVienJoin>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Trang chủ Sinh viên</h1>

<p>
    <a asp-action="Create">Tạo mới</a><br />
    <a asp-action="ImportFile">Nhập danh sách sinh viên</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SinhVien.TenSV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SinhVien.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SinhVien.SoDienThoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SinhVien.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SinhVien.TrangThai)
            </th>
            <th>
                Lớp
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaiKhoan.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SinhVien.TenSV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SinhVien.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SinhVien.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SinhVien.Email)
            </td>
            <td>
                @if (item.SinhVien.TrangThai)
                {
                    <button type="button" class="btn btn-success">Hoạt động</button>
                }
                else
                {
                    <button type="button" class="btn btn-secondary">Không hoạt động</button>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lop.TenLop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaiKhoan.UserName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SinhVien.MaSV">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.SinhVien.MaSV">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.SinhVien.MaSV">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('.table').DataTable();
    });
</script>