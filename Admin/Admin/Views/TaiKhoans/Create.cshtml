@model Admin.Models.TaiKhoan

@{
    ViewData["Title"] = "Create";
}

<h1>Tạo mới</h1>

<h4>Tài Khoản</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="TaiKhoan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" id="Username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" id="Password" />
            </div>
            <div class="form-group">
                <label class="control-label">Re-Password</label>
                <input type="password" class="form-control" id="RePassword" name="RePassword" />
                <span style="display: none" id="checkRePassword" class="text-danger">Mật khẩu phải trùng nhau</span>
            </div>
            <div class="form-group">
                <label asp-for="LoaiTaiKhoan" class="control-label"></label>
                <select asp-for="LoaiTaiKhoan" class="form-control" asp-items="ViewBag.LoaiTK">
                </select>      
                <span asp-validation-for="LoaiTaiKhoan" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TrangThai" /> @Html.DisplayNameFor(model => model.TrangThai)
                </label>
            </div>
            <div class="form-group">
                <input id="submitCreate" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Danh sách</a>
</div>
<script>
    $().ready(function () {
        $("#TaiKhoan").validate({
            onfocusout: false,
            onkeyup: false,
            onclick: false,

            rules: {
                "Username": {
                    required: true,
                    maxlength: 15
                },
                "Password":
                {
                    required: true,
                    equalTo: "#RePassword",
                },
                "LoaiTK":
                {
                    required: true
                },

            },
            messages:
            {
                "Username": {
                    required: "Username không được bỏ trống"

                },
                "LoaiTK":
                {
                    required: "Loại tài khoản không được bỏ trống"
                },

            },
            //submitHandler: function (form) {
            //    form.submit();
            //}
        });
        $("#submitCreate").click(function (e) {
            //window.location.reload();
            var password = $("#Password").val();
            var rePassword = $("#RePassword").val();

            if (password !== rePassword) {
                e.preventDefault();
                $("#checkRePassword").css("display", "block");
            }
            //$(this).css("pointer-events", "none");
        })
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
