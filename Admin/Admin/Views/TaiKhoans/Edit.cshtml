@model Admin.Models.TaiKhoan

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa</h1>

<h4>Tài Khoản</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="TaiKhoan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" id="Username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" id="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Re-Password</label>
                <input type="password" class="form-control" id="RePassword" />
            </div>
            <div class="form-group">
                <label asp-for="LoaiTaiKhoan" class="control-label"></label>
                <select asp-for="LoaiTaiKhoan" class="form-control" asp-items="ViewBag.LoaiTK">
                </select>
                <span asp-validation-for="LoaiTaiKhoan" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label asp-for="TrangThai" class="form-check-label">
                    <input type="checkbox" class="form-check-input" asp-for="TrangThai" /> @Html.DisplayNameFor(model => model.TrangThai)
                </label>
            </div>
            <div class="form-group">
                <input id="submitCreate" type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Danh sách</a>
</div>
<script>
    $().ready(function () {
        $("#TaiKhoan").validate({
            onfocusout: false,
            onkeyup: false,
            onclick: false,
            rules: {
                "Username": {
                    required: true,
                    maxlength: 15
                },
                "LoaiTK":
                {
                    required: true
                },
                "Password":
                {
                    required: true,
                    equalTo: "#RePassword",
                }
            },
            messages:
            {
                "Username": {
                    required: "Username không được bỏ trống"

                },
                "LoaiTK":
                {
                    required: "Loại tài khoản không được bỏ trống"
                },

            }
        });
        setTimeout: 3000,

            //$("#submitCreate").click(function () {
            //    $(this).css("pointer-events", "none")
            //})
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
